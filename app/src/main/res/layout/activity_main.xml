<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/abuabu"
    android:id="@+id/llmain"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:id="@+id/image_ads_main"
            android:src="@drawable/ic_launcher_background"/>
        <GridView
            android:numColumns="4"
            android:layout_below="@id/image_ads_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grida_action"
            android:scrollbars="none"/>
        <LinearLayout
            android:layout_below="@id/grida_action"
            android:id="@+id/linearmain2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Produk"/>

            <GridView
                android:numColumns="3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:verticalSpacing="0dp"
                android:horizontalSpacing="0dp"
                android:id="@+id/grid_main_produk"
                android:scrollbars="none"/>
        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarmain"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/white"
            android:padding="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="3dp"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:contentPadding="10dp"
                    app:cardCornerRadius="10dp">
                    <SearchView
                        style="@android:style/Theme.Holo.Light.DarkActionBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/searchmain"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="15dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chat21"/>
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>

</ScrollView>